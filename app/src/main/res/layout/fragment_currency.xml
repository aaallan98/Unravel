<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"

    tools:context="com.example.apple.navigate.CurrencyFragment"
    android:columnCount="3"
    android:rowCount="4">

        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="1"
            tools:text="_________________________"
            android:textAlignment="textStart"
            android:layout_marginTop="55dp"
            android:text="________________________"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="165dp"
            android:layout_height="52dp"
            android:inputType="textPersonName|number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="40dp"
            android:hint="Enter Amount Here"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Output Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="77dp"
            app:srcCompat="@drawable/usa"
            android:id="@+id/imageView10"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:text="United States"
            android:layout_marginLeft="20dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="United States"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            tools:text="South Korea"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="South Korea"
            android:layout_marginBottom="20dp"
            android:layout_gravity="top" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="77dp"
            app:srcCompat="@drawable/koreanflag"
            android:id="@+id/imageView6"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="40dp"
            tools:text="USD"
            android:layout_marginLeft="10dp"
            android:text="USD"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/reverse"
            android:id="@+id/imageView9"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="40dp"
            tools:text="KRW"
            android:layout_marginLeft="10dp"
            android:text="KRW"
            android:layout_row="0"
            android:layout_column="2" />


</GridLayout>
